{
  "name": "chat-de-atendimento",
  "version": "1.0.0",
  "description": "Sistema de atendimento via WhatsApp com Electron",
  "main": "main.js",
  "scripts": {
    "start": "concurrently -n app,ws,chat -c \"blue,magenta,green\" \"electron .\" \"npm run ws\" \"npm run chat:interno\"",
    "start:web": "node scripts/iniciar-web.js",
    "dev:web": "nodemon server-web.js",
    "build:ts": "tsc",
    "watch:ts": "tsc --watch",
    "type-check": "tsc --noEmit",
    "verificar": "node verificar-estrutura.js",
    "verificar:whatsapp": "node scripts/verificar-whatsapp.js",
    "teste": "node teste-completo.js",
    "teste:cadastro": "node tests/teste-cadastro.js",
    "teste:login": "node tests/teste-login.js",
    "teste:ia-humanizada": "node teste-ia-humanizada.js",
    "seed:admin": "node scripts/seed-admin.js",
    "ws": "node src/whatsapp/servidor-websocket.js",
    "chat:interno": "node src/whatsapp/servidor-chat-interno.js",
    "help": "node scripts/print-help.js",
    "clean": "node -e \"require('fs-extra').emptyDirSync('dados/logs')\"",
    "diagnostico": "node teste-completo.js",
    "traduzir": "node scripts/traduzir-interface.js",
    "api": "node src/infraestrutura/api.js",
    "build": "electron-builder",
    "make": "electron-forge make"
  },
  "keywords": [
    "whatsapp",
    "electron",
    "atendimento",
    "chatbot"
  ],
  "author": "DEV-Julio-Cesar",
  "license": "MIT",
  "dependencies": {
    "archiver": "^5.3.2",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "exceljs": "^4.4.0",
    "express": "^4.19.2",
    "fs-extra": "^11.3.3",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "pdfkit": "^0.15.0",
    "puppeteer": "^24.35.0",
    "qrcode": "^1.5.4",
    "whatsapp-web.js": "^1.34.4",
    "ws": "^8.19.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "heroku-postbuild": "npm run seed:admin",
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@types/node": "^24.10.1",
    "concurrently": "^8.2.2",
    "electron": "^33.4.11",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "chat_de_atendimento"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "win32"
          ]
        }
      ]
    }
  }
}
