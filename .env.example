# Configurações da Aplicação
APP_NAME="CIANET PROVEDOR"
VERSION="2.0.0"
DEBUG=false
SECRET_KEY="your-super-secret-key-change-in-production-minimum-32-characters"


# Redis
REDIS_URL="redis://localhost:6379/0"
# Para cluster Redis (opcional)
# REDIS_CLUSTER_NODES="redis-node-1:7000,redis-node-2:7000,redis-node-3:7000"

# Celery
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"

# WhatsApp Business API (Meta Cloud API)
# Obtenha suas credenciais em: https://developers.facebook.com/apps/
WHATSAPP_ACCESS_TOKEN="your-whatsapp-permanent-access-token"
WHATSAPP_PHONE_NUMBER_ID="your-phone-number-id"
WHATSAPP_WEBHOOK_VERIFY_TOKEN="your-custom-verify-token-for-webhook"
WHATSAPP_BUSINESS_ACCOUNT_ID="your-whatsapp-business-account-id"
WHATSAPP_APP_SECRET="your-facebook-app-secret-for-signature-verification"
WHATSAPP_API_VERSION="v18.0"

# WhatsApp Session Settings
WHATSAPP_SESSION_TIMEOUT_HOURS=24
WHATSAPP_MAX_RETRIES=3
WHATSAPP_RETRY_DELAY_SECONDS=1.0

# Google Gemini AI
GEMINI_API_KEY="your-gemini-api-key"
GEMINI_MODEL="gemini-1.5-flash"

# Chatbot AI Settings
CHATBOT_COMPANY_NAME="TelecomISP"
CHATBOT_MAX_CONTEXT_MESSAGES=10
CHATBOT_RESPONSE_MAX_TOKENS=1024
CHATBOT_TEMPERATURE=0.7

# JWT
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Monitoramento
LOG_LEVEL="INFO"
PROMETHEUS_METRICS_PATH="/metrics"

# Regras de Negócio
MAX_WHATSAPP_CLIENTS=10000
MAX_BOT_ATTEMPTS=3
BUSINESS_HOURS_START=8
BUSINESS_HOURS_END=18

# Upload de Arquivos
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES="image/jpeg,image/png,application/pdf"

# Configurações de Produção
TRUSTED_HOSTS="yourdomain.com,*.yourdomain.com"
CORS_ORIGINS="https://yourdomain.com,https://app.yourdomain.com"

# Configurações de Email (para notificações)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM_EMAIL="noreply@yourdomain.com"

# SGP Integration (Sistema de Gestão de Provedores)
SGP_BASE_URL="http://sua-url-sgp.com.br/api/v1"
SGP_TOKEN="your-sgp-api-token"
SGP_TIMEOUT=30
SGP_MAX_RETRIES=3

# Configurações de Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Todo dia às 2h
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET="your-backup-bucket"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"

# Configurações de Observabilidade
SENTRY_DSN="your-sentry-dsn"
JAEGER_AGENT_HOST="localhost"
JAEGER_AGENT_PORT=6831

# Configurações de Segurança
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
ENABLE_CSRF_PROTECTION=true
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE="strict"