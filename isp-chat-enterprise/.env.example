# ISP Chat Enterprise - Configurações de Ambiente
# Copie este arquivo para .env e configure as variáveis

# === CONFIGURAÇÕES GERAIS ===
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-here-change-in-production

# === BANCO DE DADOS SQL SERVER ===
DB_HOST=localhost
DB_PORT=1433
DB_NAME=ISPChatEnterprise
DB_USER=sa
DB_PASSWORD=your-strong-password
DB_DRIVER=ODBC Driver 18 for SQL Server
DB_TRUST_CERTIFICATE=yes

# === AUTENTICAÇÃO JWT ===
JWT_SECRET=your-jwt-secret-key-256-bits-minimum
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24
JWT_REFRESH_EXPIRE_DAYS=30

# === REDIS CACHE ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# === SERVIÇOS (PORTAS) ===
API_GATEWAY_PORT=8000
AUTH_SERVICE_PORT=8001
CHAT_SERVICE_PORT=8002
AI_SERVICE_PORT=8003
WHATSAPP_SERVICE_PORT=8004
WEB_INTERFACE_PORT=3000

# === WHATSAPP ===
WHATSAPP_SESSION_PATH=./data/whatsapp-sessions
WHATSAPP_WEBHOOK_URL=http://localhost:8000/webhook/whatsapp
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token

# === SEGURANÇA ===
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
RATE_LIMIT_PER_MINUTE=1000

# === MONITORAMENTO ===
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# === INTEGRAÇÕES ===
OPENAI_API_KEY=your-openai-api-key
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password